{
  "name": "nova-civilizational-architecture",
  "version": "1.0.0",
  "scripts": {
    "maturity": "python tools/maturity_check.py docs/maturity.yaml --format json",
    "maturity:diff": "python tools/maturity_check.py docs/maturity.yaml --format json --diff-against origin/main",
    "nova:welcome": "bash tools/nova-welcome.sh 2>/dev/null || powershell -NoLogo -NoProfile -Command .\\tools\\nova-welcome.ps1",
    "nova:status": "bash tools/nova-welcome.sh --compact 2>/dev/null || powershell -NoLogo -NoProfile -Command .\\tools\\nova-welcome.ps1 -Compact",
    "nova:json": "bash tools/nova-welcome.sh --json 2>/dev/null || powershell -NoLogo -NoProfile -Command .\\tools\\nova-welcome.ps1 -Json"
  }
}
