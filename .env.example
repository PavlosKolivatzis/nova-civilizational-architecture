# Nova Civilizational Architecture - Environment Configuration Template
# Copy this file to .env and fill in with your actual values
# NEVER commit .env to git - it's in .gitignore

# JWT Secret (REQUIRED - 32+ characters)
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
JWT_SECRET=your-secure-secret-here-minimum-32-characters-long

# Zenodo API Token (optional - for Phase 12 quantum entropy)
ZENODO_TOKEN=test-token-for-demo

# Federation Configuration (optional)
NOVA_NODE_ID=node-1
HOSTNAME=localhost

# Feature Flags (optional)
NOVA_ENABLE_PROMETHEUS=1
NOVA_WISDOM_GOVERNOR_ENABLED=1
NOVA_WISDOM_G_CONTEXT=auto
NOVA_RATE_LIMITING_ENABLED=1  # DoS protection (default ON for security)

# Security (optional)
NOVA_PLUGIN_DIR=./plugins  # Trusted directory for dynamic Python plugins (P1-HR1)
