        { "expr": "increase(ledger_persist_errors_total[5m])", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
