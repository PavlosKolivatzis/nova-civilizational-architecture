  "tags": ["nova", "phase14", "ledger", "postgres"],
  "panels": [
    {
      "type": "stat",
      "title": "Ledger Backend Status",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "ledger_backend_up", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } }, "type": "value" }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Total Ledger Records",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        { "expr": "ledger_records_total", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
