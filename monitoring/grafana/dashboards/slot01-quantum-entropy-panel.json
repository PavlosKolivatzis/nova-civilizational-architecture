{
  "type": "timeseries",
  "title": "Slot01 Quantum Entropy Health",
  "id": 1601,
  "gridPos": { "h": 10, "w": 12, "x": 0, "y": 0 },
  "fieldConfig": {
    "defaults": {
      "unit": "ops",
      "decimals": 2,
      "custom": {
        "drawStyle": "lines",
        "lineInterpolation": "smooth",
        "lineWidth": 2,
        "fillOpacity": 10,
        "spanNulls": true
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "#EAB839", "value": 0.1 },
          { "color": "red", "value": 0.5 }
        ]
      }
    },
    "overrides": [
      {
        "matcher": { "id": "byName", "options": "Quantum Fidelity" },
        "properties": [
          { "id": "unit", "value": "percentunit" },
          { "id": "custom.transform", "value": "negative-Y" },
          { "id": "displayName", "value": "Quantum Fidelity" }
        ]
      },
      {
        "matcher": { "id": "byName", "options": "/Bytes/" },
        "properties": [
          { "id": "unit", "value": "bytes" }
        ]
      }
    ]
  },
  "targets": [
    {
      "refId": "A",
      "expr": "sum(rate(slot01_entropy_quantum_jobs_total{status=\"ok\"}[5m]))",
      "legendFormat": "Jobs OK",
      "range": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "refId": "B",
      "expr": "sum(rate(slot01_entropy_quantum_jobs_total{status=\"error\"}[5m]))",
      "legendFormat": "Jobs Error",
      "range": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "refId": "C",
      "expr": "sum(rate(slot01_entropy_bytes_generated_total[5m]))",
      "legendFormat": "Entropy Bytes",
      "range": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    },
    {
      "refId": "D",
      "expr": "slot01_entropy_fidelity_mean",
      "legendFormat": "Quantum Fidelity",
      "range": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" }
    }
  ],
  "options": {
    "legend": { "displayMode": "table", "placement": "bottom" },
    "tooltip": { "mode": "multi", "sort": "desc" }
  },
  "description": "Tracks Slot01 quantum entropy health: job throughput, failure rate, byte generation, and fidelity estimate."
}
